.menu
  .menu__container
    .menu__start
      +logo(page.title === 'index.html', 'menu__logo')
    .menu__middle
      ul.menu__list
        each item in MENU_LIST
          li.menu__item 
            a.menu__link(href="#")= item.text
            .menu__dropdown.dropdown 
              .dropdown__container.container
                .dropdown__title
                  span= item.text 
                ul.dropdown__list
                  each subitem in item.dropdown 
                    li.dropdown__item 
                      a.dropdown__link(href="#")= subitem
    
    if page.title !== 'index.html'
      .menu__end
        .menu__search.smart-search.smart-search--simple
          .smart-search__form
            form(action="#", method="post")
              button.smart-search__form-tags(type="button") #
              label(aria-label="Поиск решений")
                input(type="search", name="search", placeholder="Поиск решений...") 
              button(type="submit")
                +icon('loupe')(width="17", height="17")
