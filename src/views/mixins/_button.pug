mixin button(text, className, svgName, href)
	if href
		a.button(href=href, class=className, target='_blank')&attributes(attributes)
			span= text
			if svgName
				span.button__icon
					+icon(svgName)
	else
		button.button(class=className, type="button")&attributes(attributes)
			span= text
			if svgName
				span.button__icon
					+icon(svgName)